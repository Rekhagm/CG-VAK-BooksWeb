@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card container p-4">
        <div class=card-header bg-primary text-light ml-0 row">
          <div class="col-12">
              <h1>@Model.Product.Title</h1>
              <p class ="text-warning">@Model.Product.Author</p>
          </div>
    </div>
    <div class="card-body row container">
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-8 col-lg-8">

                    <div class="row pl-2">
                        <h5 class="text-muted">ISBN:@Model.Product.ISBN</h5>
                    </div>
                    <div class="row pl-2">
                        <h5 class="text-muted pb-2">List price :<strike>@Model.Product.ListPrice</strike></h5>
                    </div>
                    <div class="row text-center pl-2">
                       <div class="p-1 col-2 bg-secondary border-bottom">
                           <div>Quantitty</div>
                       </div>
                        <div class="p-1 col-2 bg-secondary border-bottom">
                           <div>1-50</div>
                       </div>
                        <div class="p-1 col-2 bg-secondary border-bottom">
                           <div>51-100</div>
                       </div>
                       <div class="p-1 col-2 bg-secondary border-bottom">
                           <div>100+</div>
                       </div>
                    </div>

                    <div class="row text-center pl-2" style=color:marron;font-weight:bold>
                        <div class="p-1 col-2 bg-secondary">
                            <div>Price</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.Product.Price</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.Product.Price50</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.Product.Price100</div>
                        </div>
                </div>
                <div class="row pl-2">
                    <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                </div>
                <div class="row pl-2">
                    <div class="col-2 text-primary"><h4>Count</h4></div>
                    <div class="col-10"><input asp-for="Count" class="form-control"/></div>
                </div>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    <img src="@Model.Product.ImageUrl" style="height:200px; width:150px;" />
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" asp-action="Index">Back to Home</a>
                </div>
               <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form> 