@model IEnumerable<products>

<div class="row mt-3">
<div class="text-center">
    <h1 class="display-4">CG-Vak Books</h1>
</div>
@foreach(var products in Model)
{
    <div class="col-md-3 mb-2">
        <div class="card  p-5">
            <a asp-action="details"  asp-route-id="@products.Id">
           <img src="@products.ImageUrl" class="p-2" style="width:100% ; border : 1px solid gray; border-radius:10px"/>
            </a>
         
        <div class="card-body">
            <h5 class="card-title text-warning">@products.Title</h5>
            <p class="card-title text-info">@products.Author</p>
        </div>
        <div class="card-footer d-grid  p-0">
            <a asp-action="Details"  asp-route-id="@products.Id" class="btn btn-dark">Details</a>
        </div>
        </div>


    </div>
}
</div>